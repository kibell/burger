<div class="container text-center mt-5">
<h1>Eat-Da-Burger!</h1>
<br>
<img src="" class="img-fluid" alt="Responsive image">
<div class="row mx-auto">
  <div class="col-6">
<h2>Burgers that Need to be DEVOURED!</h2>
<div class="card uneaten mt-3 mb-2">
  <div class="card-body">
    <ul>
   {{#each burgers}}
    {{#unless this.devoured}}
   
  <p>
   
      {{this.id}}
      {{this.burger_name}}
      <form action="{{this.id}}?_method=PUT" method"POST">
      <input type="hidden" name="devoured" value="false">
      <button data-id="{{this.id}}" class="delete-burger">Devour!</button>

      </form>
      </p>
      
    {{/unless}}
  {{/each}}
</ul>
  </div>
</div>
</div>

<div class="col-6">
<h2>Burgers that have been DEVOURED!</h2>
<div class="card eaten mt-3 mb-2">
  <div class="card-body">
    <ul>
   {{#each burgers}}
   
  <p>
    {{#if devoured}}
      {{this.id}}
      {{this.burger_name}}
      </p>
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
</div>
</div>

<form class="create-form">
<div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>
  <button type="submit">Add Burger</button>
  </form>